    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "build everything",
            "miDebuggerPath": "/usr/bin/gdb",
            "name": "Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test",
            "cwd": "${workspaceFolder}/build",
        },
        {
            "name": "Windows",
            //"type": "cppvsdbg",
            "request": "launch",
            "cwd" : "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/test.exe"
        }
    ]
}