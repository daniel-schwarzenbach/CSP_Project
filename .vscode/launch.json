{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "build-ippl",
            "miDebuggerPath": "/usr/bin/gdb",
            "name": "Linux-ippl",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/HeisenbergIppl",
            "cwd": "${workspaceFolder}/build",
        },
        {
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "name": "Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Heisenberg",
            "cwd": "${workspaceFolder}/build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "preLaunchTask": "build",
            "name": "windows",
            "type": "cppdbg",
            "request": "launch",
            "cwd" : "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/Heisenberg.exe"
        },
        {
            "preLaunchTask": "build",
            "name": "MacOs",
            "type": "cppdbg",
            "request": "launch",
            "cwd" : "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/Heisenberg",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "mpiexec -n 2",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "echo",
            "runtimeArgs": ["\n \n MPI ran succesfully xD \n \n"],
            "preLaunchTask": "run mpiexec",
            "cwd" : "${workspaceFolder}/build"
        }
        

    ]
}