{
    "tasks": [
        {
            "type": "shell",
            "label": "build",

            "windows" :{
                "command": "${workspaceFolder}/build-win.bat"
            },
            "linux" :{
                "command": "${workspaceFolder}/build-unix.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/build-unix.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "build-ippl",

            "linux" :{
                "command": "${workspaceFolder}/build-unix-ippl.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/build-unix-ippl.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run mpiexec",
            "type": "shell",
            "command": "mpiexec -n 2 ${workspaceFolder}/build/HeisenbergIppl",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build"],
            "options" :{
                "cwd": "${workspaceFolder}/build"
            },
        }
    ],
    "version": "2.0.0"
}