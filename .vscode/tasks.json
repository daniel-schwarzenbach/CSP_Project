{
    "tasks": [
        {
            "type": "shell",
            "label": "build everything",

            "windows" :{
                "command": "${workspaceFolder}/build-win.bat"
            },
            "linux" :{
                "command": "${workspaceFolder}/build-linux.sh"
            },

            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}