            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "build-mpi-euler",

            "linux" :{
                "command": "${workspaceFolder}/buildscripts/build-euler-mpi.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/buildscripts/build-euler-mpi.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}