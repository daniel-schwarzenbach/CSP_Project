{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "linux" :{
                "command": "${workspaceFolder}/buildscripts/build-unix.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/buildscripts/build-unix.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "build-ippl",

            "linux" :{
                "command": "${workspaceFolder}/buildscripts/build-unix-ippl.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/buildscripts/build-unix-ippl.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "build-euler",

            "linux" :{
                "command": "${workspaceFolder}/buildscripts/build-euler.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/buildscripts/build-euler.sh"
            },
            "presentation": {
                "reveal": "always"
            },
            "options" :{
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run mpiexec",
            "type": "shell",
            "command": "mpiexec -n 2 ${workspaceFolder}/buildscripts/build/HeisenbergIppl",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build-ippl"],
            "options" :{
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "type": "shell",
            "label": "build-mpi",

            "linux" :{
                "command": "${workspaceFolder}/buildscripts/build-unix-mpi.sh"
            },
            "osx" :{
                "command": "${workspaceFolder}/buildscripts/build-unix-mpi.sh"
            },
            "presentation": {
